<div class="image">
    <%= image_tag @movie.image_file_name %>
<div>
<section class="movie-details">
  
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div class="reviews">
      <%= average_stars(@movie) %>
      <%= link_to pluralize(@movie.reviews.size, 'Review'), movie_reviews_path(@movie), class: "button" %> 
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    <%= link_to "Review", new_movie_review_path(@movie), class: "review" %>
  </div>
</section>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", movie_path(@movie), class: "button", 
                          method: :delete, data: {confirm: 'Are you sure'}%>
  </section>
<% end %>